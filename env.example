# Google Maps Lead Scraper Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
SECRET_KEY=your-super-secret-key-change-this

# ============================================================================
# Google Places API
# ============================================================================
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# ============================================================================
# Budget & Usage Tracking
# ============================================================================

# Maximum requests per month (Google gives you $200 free credit)
# ~22,000 requests costs approximately $200 (at $0.009 per request)
# Set to 20,000 to stay safely under the free credit
MAX_REQUESTS_PER_MONTH=20000

# Maximum cost per month in USD (leave at 180 to stay safely under $200 free)
MAX_COST_PER_MONTH=180.0

# Estimated cost per API request in USD
# Different query types have different costs:
#   - Basic (name, address, rating): $0.005
#   - Contact (includes phone, website): $0.007
#   - Atmosphere (includes photos, hours): $0.009
# Using $0.009 is conservative estimate
COST_PER_REQUEST=0.009

# ============================================================================
# Database
# ============================================================================

# SQLite database file path (usage tracking)
USAGE_DB_PATH=usage.db

# Optional: PostgreSQL for production
# DATABASE_URL=postgresql://user:password@localhost:5432/scraper

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================================================
# GDPR & Legal Compliance
# ============================================================================
GDPR_COMPLIANT=True
DATA_PROCESSING_PURPOSES=B2B prospection for business development
STORAGE_LOCATION=EU
DATA_RETENTION_DAYS=180

# ============================================================================
# Deployment
# ============================================================================
# For production (Render, Heroku, etc):
# FLASK_ENV=production
# FLASK_DEBUG=False
